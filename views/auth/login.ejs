<%- include('../partials/head') %>
    <title>Login</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<%- include('../partials/nav') %>
<%- include('../error/login') %>
<body style="background-color: #fefaeb;">
    <section class="text-center text-lg-start">
      <style>
        .cascading-right {
          margin-right: -50px;
        }
    
        @media (max-width: 991.98px) {
          .cascading-right {
            margin-right: 0;
          }
        }
      </style>
    <div class="container py-4 mt-1">
      <div class="row g-0 align-items-center">
        <div class="col-lg-6 mb-3 mb-lg-0" style="z-index: 1;">
          <div class="card cascading-right" style="
              background: hsla(0, 0%, 100%, 0.55);
              backdrop-filter: blur(30px);
              ">
            <div class="card-body p-4 shadow-5 text-center">
              <h2 class="fw-bold mb-5">Inicia Sesi칩n</h2>
              <form action="/login" method="post" id="miFormulario">
                <!-- 2 column grid layout with text inputs for the first and last names -->
                <!-- Email input -->
                <div class="form-floating mb-4">
                  <input type="text"  name="username" id="username" class="form-control" placeholder="" value="<% if(typeof valores != 'undefined') { %><%= valores.username %><%}%>" />
                  <label class="form-label" for="form3Example3">Username</label>
                  <div class="invalid-feedback" id="errorUser" style="display: none;">El campo Username es requerido</div>
                </div>
    
                <!-- Password input -->
                <div class="form-floating mb-4">
                  <input type="password"  name="password" id="password" class="form-control"placeholder="" value="<% if(typeof valores != 'undefined') { %><%= valores.password %><%}%>" />
                  <label class="form-label" for="form3Example4">Constrase침a</label>
                  <div class="invalid-feedback" id="errorContra" style="display: none;">El campo Contrase침a es requerido</div>
                </div>
    
                <!-- Submit button -->
                <button type="submit" class="btn btn-primary btn-block mb-4" >
                  Ingresar
                </button>

                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary btn-block mb-4" data-mdb-toggle="modal" data-mdb-target="#staticBackdrop">
                  Olvide mi contrase침a?
                </button>

                <!-- Register buttons -->
                <div class="text-center">
                  <p>O ingresa con: </p>
                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-facebook-f"></i>
                  </button>
    
                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-google"></i>
                  </button>
    
                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-twitter"></i>
                  </button>
    
                  <button type="button" class="btn btn-link btn-floating mx-1">
                    <i class="fab fa-github"></i>
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
    
        <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: -1;">
          <div id="carouselExampleControls" class="carousel slide" data-mdb-ride="carousel">
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img style="max-height: 350px;" src="https://firebasestorage.googleapis.com/v0/b/kiwisazonp.appspot.com/o/imagenes%2Frecetas2.png?alt=media&token=312eb2fe-d550-44e4-a78a-f9bb43154612" class="w-100 rounded-4 shadow-4" alt="Wild Landscape"/>
              </div>
              <div class="carousel-item">
                <img style="max-height: 350px;" src="https://firebasestorage.googleapis.com/v0/b/kiwisazonp.appspot.com/o/imagenes%2Frecetas1.png?alt=media&token=6bf98922-3b08-4dbb-a26d-aa02be56ee7b" class="w-100 rounded-4 shadow-4" alt="Camera"/>
              </div>
              
            </div>
           
          </div>
          
        </div>
      </div>
    </div>
    <!-- Jumbotron -->
    </section>
</body>
<div class="w-100 fixed-buttom mb-0 ms-0 me-0 mt-3">
  <%- include('../partials/footer') %>
</div>

<script src="/js/login.js" ></script>




