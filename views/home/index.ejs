  <%- include('../partials/nav') %>
      <div class="jumbotron jumbotron-fluid text-center pt-5 pb-5">
        <div class="container" style="backdrop-filter: blur(10px);">
          <h1 class="display-4">¡Descubre deliciosas recetas!</h1>
          <p class="lead">Encuentra inspiración para tus comidas favoritas.</p>
          <a href="<%= loginUser === undefined ? '/receta/Todas las Recetas' : '/recetas/Todas las Recetas' %>  " class="btn btn-primary btn-lg mb-2">Explorar Recetas</a>
        </div>
      </div>

    <body class="contenido">
      <div class="col text-center">    
        <h2 class="section-title px-5"><span class="px-lg-2">¡Descubre tu Sazón!</span></h2>
    </div>
      <div class="container" style="margin-top: 2rem;">
