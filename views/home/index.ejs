
<%- include('../partials/head') %>
  <!DOCTYPE html>
  <html>

  <head>
    <title>KiwiSazón</title>
    <link rel="stylesheet" href="/stylesheets/home.css">
  </head>
  <%- include('../partials/nav') %> 
      <div class="jumbotron jumbotron-fluid text-center pt-5 pb-5">
        <div class="container" style="backdrop-filter: blur(10px);">
          <h1 class="display-4">¡Descubre deliciosas recetas!</h1>
          <p class="lead">Encuentra inspiración para tus comidas favoritas.</p>
          <a href="<%= loginUser === undefined ? '/receta/Todas las Recetas' : '/recetas/Todas las Recetas' %>  " class="btn btn-primary btn-lg mb-2">Explorar Recetas</a>
        </div>
      </div>

    <body class="contenido">
     

      <div class="col text-center">    
        <h2 class="section-title px-5"><span class="px-lg-2">¡Descubre tu Sazón!</span></h2>
    </div>
      <div class="container" style="margin-top: 2rem;">
        <!-- Carousel wrapper -->
        <div id="carouselBasicExample" class="carousel slide carousel-fade" data-mdb-ride="carousel">
          <!-- Indicators -->
          <div class="carousel-indicators">
            <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="0" class="active"
              aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="1"
              aria-label="Slide 2"></button>
            <button type="button" data-mdb-target="#carouselBasicExample" data-mdb-slide-to="2"
              aria-label="Slide 3"></button>
          </div>

          <!-- Inner -->
          <div class="carousel-inner">
            <!-- Single item -->
            <div class="carousel-item active">
              <img src="/img/rapehorno.jpg"  class="d-block w-100 img" alt="Sunset Over the City" />
              <div class="carousel-caption d-none d-md-block">
                <h5>Ostiones a la porte</h5>
                <p></p>
              </div>
            </div>

            <!-- Single item -->
            <div class="carousel-item">
              <img src="/img/berenjenas.jpg" class="d-block w-100 img" alt="Canyon at Nigh" />
              <div class="carousel-caption d-none d-md-block">
                <h5>Berengenas con queso</h5>
                <p></p>

              </div>
            </div>
             <!-- Single item -->
             <div class="carousel-item">
              <img src="/img/muffinssaludables.jpg"  class="d-block w-100 img" alt="Canyon at Nigh" />
              <div class="carousel-caption d-none d-md-block">
                <h5>Muffins</h5>
                <p></p>

              </div>
            </div>
            <!-- Inner -->

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-mdb-target="#carouselBasicExample"
              data-mdb-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-mdb-target="#carouselBasicExample"
              data-mdb-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
        </div>
        <!-- Carousel wrapper -->
      </div>

     
      <!--  Categorias -->
      <div class="container mt-4">
        <div class="col text-center">    
            <h2 class="section-title px-5"><span class="px-lg-2">Categorías Populares</span></h2>
        </div>
        
        <div class="row row-cols-1 row-cols-md-3">
          <% categorias.forEach(cate => { %>
            <div class="col mb-4">
              <div class="card category-card">
                <% if (cate.image == null) { %>
                  <img src="https://cdn-icons-png.flaticon.com/512/2905/2905306.png" class="card-img-top category-image" alt="Categoría 1" />
                <% } else { %>
                  <img src="<%= cate.image %>" class="card-img-top category-image" alt="Categoría 1" />
                <% } %>
                <div class="card-body">
                  <h5 class="card-title"><%= cate.nombre %></h5>
                  <p class="card-text"><%= cate.descripcion %></p>
                  <% if (loginUser === undefined) { %>
                    <a href="/receta/<%= cate.nombre %>" class="btn btn-primary">Ver Recetas</a>
                  <% } else { %>
                    <a href="/recetas/<%= cate.nombre %>" class="btn btn-primary">Ver Recetas</a>
                  <% } %>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
        
      </div>
      <!--  Carrusel  -->
      <!--  Recetas -->
      <div class="col text-center">    
        <h2 class="section-title px-5"><span class="px-lg-2"><strong class="text-warning">&#9819</strong> Recetas más Populares <strong class="text-warning">&#9819</strong> </span></h2>
    </div>


    <div class="row  me-2 ms-2">
      <% recetas.forEach(item=> { %>
        
        <div class="col-sm-4 col-md-4 col-lg-3  mt-4">
            <div class="food-card">
                <div class="food-card_img">
                    <% if(item.imagen==null) { %>
                        <img
                            src="https://cdn-icons-png.flaticon.com/512/2905/2905306.png" />
                        <% }else{ %>
                            <img src="<%= item.imagen %>" />
                            <% } %>
                            <!-- <% if (loginUser) { %>
                              <form action="/favorite/<%= item._id %>" method="post">
                                <button type="submit" ><i class="far fa-heart"></i></button>
                              </form>
                            <% } %> -->
                            <% if (loginUser) { %>
                              <a href="javascript:void(0);" class="favorite-link" data-id="<%= item._id %>"><i class="far fa-heart"></i></a>

                            <% } %>
                </div>
                <div class="food-card_content">
                    <div class="food-card_title-section">
                        <a href="#!" class="food-card_title">
                            <%= item.platilloNombre %>
                        </a>
                        <a href="#!" class="food-card_author">Categoria: <%= item.categoria %></a>
                        <div class="food-card_author"> 
                            Tiempo: 
                            <span class="fa-regular fa-clock"></span>
                            <%= item.tiempo %> Min.
                        </div>
                    </div>
                    <div class="food-card_bottom-section">
                        <div class="space-between">
                            <div>
                                <% if (item.dificultad=='Baja') { %>
                                    <span class="fa fa-fire" style="color: green;"></span>
                                <% } %>
                                <% if (item.dificultad=='Media') { %>
                                    <span class="fa fa-fire" style="color: orange;"></span>
                                <% } %>
                                <% if (item.dificultad=='Alta') { %>
                                    <span class="fa fa-fire" style="color: red;"></span>
                                <% } %>
                               
                                <%= item.dificultad %> &nbsp;&nbsp;-&nbsp;&nbsp; 
                                <span class="fa-solid fa-users"></span>
                                <%= item.porciones %>
                            </div>
                            
                          
                        </div>
                        <div >
                          <i class="fa-solid fa-star text-warning"></i> <i class="fa-solid fa-star text-warning"></i>  <i class="fa-solid fa-star text-warning"></i> <i class="fa-solid fa-star-half-stroke text-warning"></i><i class="fa-regular fa-star text-warning"></i>
                        </div>
                        <hr>
                        <div class="mb-2">
                           
                            <div class="food-card_price">
                                <div class="d-flex flex-wrap justify-content-center" >
                                  <a 
                                   <% if (loginUser) { %>
                                    href="/recetas/<%= item._id %>/detalle"
                                   <% }else{ %>
                                      href="/recetas/<%= item._id %>/detalles"
                                    <% } %>
                                        
                                    type="button"
                                    class="btn btn-info btn-lg btn-rounded " 
                                      title="Detalle"> Ver Mas
                                    <i class="fa-solid fa-plus"></i>
                                </a>

                                    
                                    
                                </div>

                                
                            </div>
                            
                        </div>
                        
                    </div>
                </div>
            </div>

        </div>
        <% }); %>
        <!-- Recetas -->
     </div>


    </body>
    <div class="w-100 fixed-buttom mb-0 ms-0 me-0 mt-3">
      <%- include('../partials/footer') %>
    </div>

    <script src="/js/recetaFav.js" ></script>
  </html>